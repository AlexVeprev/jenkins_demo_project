pipeline {
    agent none
    parameters {
        string(name: 'version', defaultValue: '', description: 'Version to be used for release')
    }
    stages {
        stage('Build') {
            agent any
            steps {
                script {
                    println(params.version)
                    response = httpRequest \
                        httpMode: 'POST', \
                        url: 'https://api.github.com//repos/AlexVeprev/github_ci_workshop_2022/releases', \
                        authentication: "token_github_releases", \
                        requestBody: '{"tag_name":"v0.2.12","name":"v0.2.12"}'
                    println('Status: '+response.status)
                    println('Response: '+response.content)
                    def parsed_response = readJSON text: response.content
                    println('Parsed ID: '+parsed_response.id)
                }
            }
        }
    }
}
