pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.builder'
                }
            }
            steps {
                sh '''
                whoami
                sudo apt update
                cmake -B build -S .
                cd build
                make VERBOSE=1
                ctest --output-on-failure
                cpack -G DEB
                '''
                stash includes: 'build/intsum-*-Linux.deb', name: 'linux_build'
            }
        }
        stage('Test') {
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.tester_ub20'
                }
            }
            steps {
                unstash 'linux_build'
                sh '''
                apt install -y ./build/intsum-*-Linux.deb
                intsum 10
                '''
            }
        }
    }
}
